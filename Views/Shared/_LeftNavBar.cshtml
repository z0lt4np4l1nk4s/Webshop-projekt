<div class="sidebar">
    <ul>
        @foreach (Webshop.Models.Kategorije k in ViewBag.Kategorije)
        {
            if (ViewBag.Title == k.ImeKategorije || k.ID == ViewBag.KatID)
            {
                <li class="list-group-item active"><a href="/Home/Kategorija?cat=@k.ID">@k.ImeKategorije</a></li>
            }
            else
            {
                <li class="list-group-item"><a href="/Home/Kategorija?cat=@k.ID">@k.ImeKategorije</a></li>
            }
        }
    </ul>
</div>
