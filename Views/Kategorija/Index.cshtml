@model IEnumerable<Webshop.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Kategorije</h2>

<p>
    @Html.ActionLink("Dodaj novo", "Create") <text> | </text> @Html.ActionLink("Uredi kategorije proizvoda", "Proizvod")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImeKategorije)
        </th>
        <th>
            Broj proizvoda
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImeKategorije)
        </td>
        <td>
            @Html.Partial("_BrojProizvoda", item)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
